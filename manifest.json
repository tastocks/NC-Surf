{
  "manifest_version": 2,

  "name": "NC-Surf",
  "description": "This extension virtually isolates cookies allowing for multiple users per window and protects against CSRF attacks.",
  "version": "1.2.1",
  "default_locale": "en",
  "author": "Alex Everett, Tyler Stocksdale of NCSU",
  "icons": { "16": "small_icon.png", "48": "medium_icon.png", "128": "large_icon.png" },
  "browser_action": {
    "default_icon": "small_icon.png"
  },
  "permissions": [
    "webNavigation",
    "activeTab",
    "http://*/",
    "https://*/",
    "tabs",
    "cookies",
    "background",
    "webRequest",
    "webRequestBlocking"
  ],
    "background": {
        "scripts": ["incognito.js", "purl.js"]
    }
}
